{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:prettier/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "useTabs": false,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "quotes": ["error", "double", { "allowTemplateLiterals": true, "avoidEscape": true }],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "indent": "off"
            }
        ]
    }
}
